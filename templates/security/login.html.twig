{% extends 'base.html.twig' %}

{% block title %}Symrecipe - Connexion{% endblock %}

{% block body %}
    <div class="container">

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if error %}
            <div class="alert alert-danger mt-4">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post" name="login">
                <fieldset>
                    <legend>Formulaire de connexion</legend>
                    <div class="form-group">
                        <label for="username" class="form-label mt-4">Adresse email</label>
                        <input type="email" class="form-control" id="username" name="_username" aria-describedby="emailHelp" placeholder="example@mail.com" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label mt-4">Mot de passe</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="mot_de_passe">
                    </div>

                    <button type="submit" class="btn btn-info mt-4">
                        Connexion
                    </button>
                </fieldset>
        </form>
    </div>
{% endblock %}
